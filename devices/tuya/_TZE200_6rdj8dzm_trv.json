{
  "schema": "devcap1.schema.json",
  "manufacturername": ["_TZE200_6rdj8dzm"],
  "modelid": ["TS0601", "TS0601", "TS0601"],
  "vendor": "Tuya",
  "product": "Smart Radiator Thermostat",
  "sleeper": false,
  "status": "Gold",
  "subdevices": [
    {
      "type": "$TYPE_THERMOSTAT",
      "restapi": "/sensors",
      "uuid": [
        "$address.ext",
        "0x01",
        "0xef00"
      ],
      "meta": {
        "values": {
          "config/mode": {"auto": 0, "heat": 1, "off": 2}
        }
      },
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion"
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "config/on"
        },
        {
          "name": "state/reachable"
        },
        {
          "name": "state/lastupdated"
        },
        {
          "name": "config/mode",
          "values": [
              ["auto", 0], ["heat", 1], ["off", 2]
          ],
          "write": { "fn": "tuya", "dpid": 2, "dt": "0x30", "eval": "if (Item.val == 'auto') { 0 } else if (Item.val == 'heat') { 1 } else { 2 };" },
          "parse": { "fn": "tuya", "dpid": 2, "eval": "if (Attr.val == 0) { Item.val = 'auto' } else if (Attr.val == 1) { Item.val = 'heat' } else { Item.val = 'off' };" },
	  "read": { "fn": "none" }
        },
        {
          "name": "state/on",
          "parse": { "fn": "tuya", "dpid": 3, "eval": "Item.val = (Attr.val == 0);" },
          "read": { "fn": "none" }
        },
        {
          "name": "config/heatsetpoint",
          "write": { "fn": "tuya", "dpid": 4, "dt": "0x2b", "eval": "Item.val / 10;" },
          "parse": { "fn": "tuya", "dpid": 4, "eval": "Item.val = (Attr.val * 10);" },
          "read": { "fn": "none" }
        },
        {
          "name": "state/temperature",
          "parse": { "fn": "tuya", "dpid": 5, "eval": "Item.val = (Attr.val * 10);" },
	  "read": { "fn": "none" }
        },
        {
          "name": "config/locked",
          "default": false,
          "write": { "fn": "tuya", "dpid": 7, "dt": "0x30", "eval": "if (Item.val) { 0 } else { 1 };" },
          "parse": { "fn": "tuya", "dpid": 7, "eval": "Item.val = (Attr.val == 0);" },
          "read": { "fn": "none" }
        },
        {
          "name": "state/lowbattery",
          "parse": { "fn": "tuya", "dpid": 35, "eval": "Item.val = (Attr.val == 0);" },
	  "read": { "fn": "none" }
        },
        {
          "name": "config/offset",
	  "default": 0,
          "write": { "fn": "tuya", "dpid": 47, "dt": "0x2b", "eval": "Item.val / 10;" },
          "parse": { "fn": "tuya", "dpid": 47, "eval": "Item.val = (Attr.val * 10);" },
	  "read": { "fn": "none" }
        }
      ]
    }
  ]
}
