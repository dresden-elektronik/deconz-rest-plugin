          "refresh.interval": 360,
          "parse": {
            "at": "0x0000",
            "cl": "0xFCA0",
            "ep": "0x01",
            "eval": "if (Attr.val == 0) { Item.val = 'disabled' } else if (Attr.val == 1) { Item.val = 'shutter' } else  if (Attr.val == 4) { Item.val = 'light' }",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "read": {
            "at": "0x0000",
            "cl": "0xFCA0",
            "ep": "0x01",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "write": {
            "at": "0x0000",
            "cl": "0xFCA0",
            "dt": "0x30",
            "ep": "0x01",
            "eval": "if (Item.val == 'disabled') { 0 } else if (Item.val == 'shutter') { 1 } else if (Item.val == 'light') { 4 }",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "values": [
            ["\"disabled\"", "Device is not configured"],
            ["\"shutter\"", "Device controls a shutter"],
            ["\"light\"", "Device controls lights"] 
          ],
          "default": "disabled"
        },
        {
          "name": "config/mode",
          "refresh.interval": 360,
          "read": {
            "at": "0x0001",
            "cl": "0xFCA0",
            "ep": "0x01",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "parse": {
            "at": "0x0001",
            "cl": "0xFCA0",
            "ep": "0x01",
            "eval": "if (Attr.val == 1) { Item.val = 'momentary'; } else if (Attr.val == 2) { Item.val = 'momentaryswitched'; } else if (Attr.val == 3) { Item.val = 'rocker'; } else if (Attr.val == 4) { Item.val = 'rockerswitched'; }",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "write": {
            "at": "0x0001",
            "cl": "0xFCA0",
            "dt": "0x30",
            "ep": "0x01",
            "eval": "if (Item.val == 'momentary') { 1 } else if (Item.val == 'momentaryswitched') { 2 } else if (Item.val == 'rocker') { 3 } else if (Item.val == 'rockerswitched') { 4 }",
            "fn": "zcl:attr",
            "mf": "0x1209"
          },
          "default" : "momentary",
          "values": [
            ["\"momentary\"", "All inputs in momentary mode"],
            ["\"momentaryswitched\"", "All inputs in momentary mode (sides switched)"],
            ["\"rocker\"", "All inputs in rocker mode"],
            ["\"rockerswitched\"", "All inputs in rocker mode (sides switched)"]
          ]
        },
        {
          "name": "config/locked",
