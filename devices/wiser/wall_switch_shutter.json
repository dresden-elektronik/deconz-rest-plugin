{
    "schema": "devcap1.schema.json",
    "manufacturername": "Schneider Electric",
    "modelid": "NHPB/SHUTTER/1",
    "vendor": "Wiser Odace",
    "product": "S520567W roller shutter switch",
    "sleeper": false,
    "status": "Gold",
    "subdevices": [
        {
            "type": "$TYPE_WINDOW_COVERING_DEVICE",
            "restapi": "/lights",
            "uuid": [
                "$address.ext",
                "0x01"
            ],
            "items": [
                {
                    "name": "attr/id"
                },
                {
                    "name": "attr/lastannounced"
                },
                {
                    "name": "attr/lastseen"
                },
                {
                    "name": "attr/manufacturername"
                },
                {
                    "name": "attr/modelid"
                },
                {
                    "name": "attr/name"
                },
                {
                    "name": "attr/swversion"
                },
                {
                    "name": "attr/type"
                },
                {
                    "name": "attr/uniqueid"
                },
                {
                    "name": "state/lift",
                    "refresh.interval": 300,
                    "parse": {
                        "at": "0x0008",
                        "cl": "0x0102",
                        "ep": 5,
                        "eval": "Item.val = Attr.val == 255 ? 50 : (100 - Attr.val)",
                        "fn": "zcl"
                    },
                    "default": 0
                },
                {
                    "name": "state/open",
                    "parse": {
                        "at": "0x0008",
                        "cl": "0x0102",
                        "ep": 5,
                        "eval": "Item.val = Attr.val != 0",
                        "fn": "zcl"
                    }
                },
                {
                    "name": "state/reachable"
                }
            ]
        },
        {
            "type": "$TYPE_SWITCH",
            "restapi": "/sensors",
            "uuid": [
                "$address.ext",
                "0x15",
                "0x0102"
            ],
            "items": [
                {
                    "name": "attr/id"
                },
                {
                    "name": "attr/lastannounced"
                },
                {
                    "name": "attr/lastseen"
                },
                {
                    "name": "attr/manufacturername"
                },
                {
                    "name": "attr/modelid"
                },
                {
                    "name": "attr/name"
                },
                {
                    "name": "attr/swversion"
                },
                {
                    "name": "attr/type"
                },
                {
                    "name": "attr/uniqueid"
                },
                {
                    "name": "config/duration",
                    "description": "The duration in second to open or close the shutter.",
                    "read": {
                        "at": "0xE000",
                        "cl": "0x0102",
                        "ep": 5,
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "write": {
                        "at": "0xE000",
                        "cl": "0x0102",
                        "dt": "0x21",
                        "ep": 5,
                        "eval": "Item.val",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "parse": {
                        "at": "0xE000",
                        "cl": "0x0102",
                        "ep": 5,
                        "eval": "Item.val = Attr.val",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "default": 120
                },
                {
                    "name": "config/ledindication",
                    "read": {
                        "at": "0x0000",
                        "cl": "0xff17",
                        "ep": 21,
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "write": {
                        "at": "0x0000",
                        "cl": "0xff17",
                        "dt": "0x30",
                        "ep": 21,
                        "eval": "Item.val ? 1 : 0",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "parse": {
                        "at": "0x0000",
                        "cl": "0xff17",
                        "ep": 21,
                        "eval": "Attr.val == 0 ? Item.val = false : Item.val = true",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "default": false
                },
                {
                    "name": "config/locked",
                    "read": {
                        "at": "0x0001",
                        "cl": "0xff17",
                        "ep": 21,
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "write": {
                        "at": "0x0001",
                        "cl": "0xff17",
                        "dt": "0x30",
                        "ep": 21,
                        "eval": "Item.val ? 0 : 2",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "parse": {
                        "at": "0x0001",
                        "cl": "0xff17",
                        "ep": 21,
                        "eval": "Item.val = Attr.val == 0",
                        "fn": "zcl",
                        "mf": "0x105e"
                    },
                    "default": false
                },
                {
                    "name": "config/on"
                },
                {
                    "name": "config/reachable"
                },
                {
                    "name": "state/buttonevent"
                },
                {
                    "name": "state/lastupdated"
                }
            ]
        }
    ],
    "bindings": [
        {
            "bind": "unicast",
            "src.ep": 5,
            "cl": "0x0102",
            "report": [
                {
                    "at": "0x0008",
                    "dt": "0x20",
                    "min": 1,
                    "max": 300,
                    "change": "0x00000001"
                },
                {
                    "at": "0xE000",
                    "dt": "0x21",
                    "min": 1,
                    "max": 300,
                    "change": "0x00000001"
                }
            ]
        },
        {
            "bind": "unicast",
            "src.ep": 21,
            "cl": "0x0102"
        },
        {
            "bind": "unicast",
            "src.ep": 21,
            "cl": "0xFF17",
            "report": [
                {
                    "at": "0x0000",
                    "dt": "0x30",
                    "min": 0,
                    "max": 1,
                    "change": "0x00000001"
                },
                {
                    "at": "0x0001",
                    "dt": "0x30",
                    "min": 0,
                    "max": 2,
                    "change": "0x00000001"
                }
            ]
        }
    ]
}