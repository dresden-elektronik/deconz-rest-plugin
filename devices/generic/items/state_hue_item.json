{
  "schema": "resourceitem1.schema.json",
  "id": "state/hue",
  "datatype": "UInt16",
  "access": "RW",
  "public": true,
  "default": 0,
  "description": "The current color hue.",
  "parse": {
    "fn": "zcl:attr",
    "ep": 0,
    "cl": "0x0300",
    "at": "0x4000",
    "eval": "Item.val = Attr.val"
  },
  "read": {
    "fn": "zcl:attr",
    "ep": 0,
    "cl": "0x0300",
    "at": "0x4000"
  },
  "refresh.interval": 5
}
