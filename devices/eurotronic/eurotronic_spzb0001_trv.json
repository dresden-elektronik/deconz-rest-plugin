{
    "schema": "devcap1.schema.json",
    "manufacturername": "Eurotronic",
    "modelid": "SPZB0001",
    "vendor": "Eurotronic",
    "product": "Spirit radiator thermostat",
    "sleeper": false,
    "status": "Gold",
    "subdevices": [
        {
            "type": "$TYPE_THERMOSTAT",
            "restapi": "/sensors",
            "uuid": [
                "$address.ext",
                "0x01",
                "0x0201"
            ],
            "fingerprint": {
                "profile": "0x0104",
                "device": "0x0301",
                "endpoint": "0x01",
                "in": [
                    "0x0000",
                    "0x0001",
                    "0x0201"
                ]
            },
            "meta": {
                "values": {
                    "config/mode": {
                        "off": 0,
                        "auto": 1,
                        "heat": 4
                    }
                }
            },
            "items": [
                {
                    "name": "attr/id"
                },
                {
                    "name": "attr/lastannounced"
                },
                {
                    "name": "attr/lastseen"
                },
                {
                    "name": "attr/manufacturername"
                },
                {
                    "name": "attr/modelid"
                },
                {
                    "name": "attr/name"
                },
                {
                    "name": "attr/swversion"
                },
                {
                    "name": "attr/type"
                },
                {
                    "name": "attr/uniqueid"
                },
                {
                    "name": "config/battery",
                    "refresh.interval": 43265,
                    "parse": {
                        "at": "0x0021",
                        "cl": "0x0001",
                        "ep": 1,
                        "eval": "Item.val = Attr.val / 2",
                        "fn": "zcl:attr"
                    },
                    "read": {
                        "at": "0x0021",
                        "cl": "0x0001",
                        "ep": 1,
                        "fn": "zcl:attr"
                    },
                    "default": 0
                },
                {
                    "name": "config/displayflipped",
                    "refresh.interval": 3660,
                    "read": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "write": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "dt": "0x22",
                        "ep": 0,
                        "eval": "if (Item.val == true) { R.item('config/hostflags').val | 0x02 } else { R.item('config/hostflags').val & ~0x02};",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "parse": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "eval": "Item.val = ((Attr.val & 0x02) !== 0);",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "default": false
                },
                {
                    "name": "config/heatsetpoint",
                    "refresh.interval": 660,
                    "read": {
                        "at": "0x0012",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr"
                    },
                    "write": {
                        "at": "0x0012",
                        "cl": "0x0201",
                        "dt": "0x29",
                        "ep": 0,
                        "eval": "Item.val",
                        "fn": "zcl:attr"
                    },
                    "parse": {
                        "at": "0x0012",
                        "cl": "0x0201",
                        "ep": 0,
                        "eval": "Item.val = Attr.val",
                        "fn": "zcl:attr"
                    },
                    "default": 0
                },
                {
                    "name": "config/hostflags",
                    "refresh.interval": 3660,
                    "public": false,
                    "parse": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr",
                        "mf": "0x1037",
                        "eval": "Item.val = Attr.val"
                    },
                    "read": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "default": 0
                },
                {
                    "name": "config/locked",
                    "refresh.interval": 3660,
                    "read": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "write": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "dt": "0x22",
                        "ep": 0,
                        "eval": "if (Item.val == true) { R.item('config/hostflags').val | 0x80 } else { R.item('config/hostflags').val & ~0x80};",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "parse": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "eval": "Item.val = ((Attr.val & 0x80) !== 0);",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "default": false
                },
                {
                    "name": "config/mode",
                    "refresh.interval": 3660,
                    "read": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "write": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "dt": "0x22",
                        "ep": 0,
                        "eval": "if (Item.val == 'off') { R.item('config/hostflags').val & ~0x04 | 0x20 } else if (Item.val == 'heat') { R.item('config/hostflags').val & ~0x20 | 0x04 } else if (Item.val == 'auto') { R.item('config/hostflags').val & ~0x20 & ~0x04 };",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "parse": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 0,
                        "eval": "if ((Attr.val & 0x30) !== 0) { Item.val = 'off' } else if ((Attr.val & 0x04) !== 0) { Item.val = 'heat' } else { Item.val = 'auto' };",
                        "fn": "zcl:attr",
                        "mf": "0x1037"
                    },
                    "default": "auto"
                },
                {
                    "name": "config/on"
                },
                {
                    "name": "config/reachable"
                },
                {
                    "name": "state/errorcode",
                    "refresh.interval": 3660,
                    "parse": {
                        "at": "0x4002",
                        "cl": "0x0201",
                        "ep": 1,
                        "eval": "var res = ''; if (Attr.val & 0x08) { res = 'E1'; } else if (Attr.val & 0x10) { res = 'E2'; } else if (Attr.val & 0x20) { res = 'E3'; } else { res = 'none'; } Item.val = res;",
                        "fn": "zcl",
                        "mf": "0x1037"
                    },
                    "read": {
                        "at": "0x4002",
                        "cl": "0x0201",
                        "ep": 1,
                        "fn": "zcl",
                        "mf": "0x1037"
                    },
                    "default": "none"
                }
                {
                    "name": "state/lastupdated"
                },
                {
                    "name": "state/on",
                    "refresh.interval": 660,
                    "read": {
                        "at": "0x0000",
                        "cl": "0x0006",
                        "ep": 0,
                        "fn": "zcl:attr"
                    },
                    "parse": {
                        "at": "0x0000",
                        "cl": "0x0006",
                        "ep": 0,
                        "eval": "Item.val = Attr.val",
                        "fn": "zcl:attr"
                    },
                    "default": false
                },
                {
                    "name": "state/temperature",
                    "refresh.interval": 660,
                    "read": {
                        "at": "0x0000",
                        "cl": "0x0201",
                        "ep": 0,
                        "fn": "zcl:attr"
                    },
                    "parse": {
                        "at": "0x0000",
                        "cl": "0x0201",
                        "ep": 0,
                        "eval": "Item.val = Attr.val",
                        "fn": "zcl:attr"
                    },
                    "default": 0
                },
                {
                    "name": "state/valve",
                    "refresh.interval": 660,
                    "read": {
                        "fn": "none"
                    },
                    "parse": {
                        "at": "0x0008",
                        "cl": "0x0201",
                        "eval": "Item.val = (Attr.val / 255) * 100;",
                        "fn": "zcl:attr"
                    },
                    "default": 0
                },
                {
                    "name": "state/windowopen",
                    "refresh.interval": 3660,
                    "parse": {
                        "at": "0x4008",
                        "cl": "0x0201",
                        "ep": 1,
                        "eval": "Item.val = (R.item('config/hostflags').val >> 3) & 0x01;",
                        "fn": "zcl",
                        "mf": "0x1037"
                    },
                    "read": {
                        "fn": "none"
                    },
                    "default": false
                }
            ]
        }
    ],
    "bindings": [
        {
            "bind": "unicast",
            "src.ep": 1,
            "cl": "0x0001",
            "report": [
                {
                    "at": "0x0021",
                    "dt": "0x20",
                    "min": 3600,
                    "max": 43200,
                    "change": "0x00000002"
                }
            ]
        },
        {
            "bind": "unicast",
            "src.ep": 1,
            "cl": "0x0201",
            "report": [
                {
                    "at": "0x0000",
                    "dt": "0x29",
                    "min": 1,
                    "max": 600,
                    "change": "0x00000014"
                },
                {
                    "at": "0x0008",
                    "dt": "0x20",
                    "min": 1,
                    "max": 600,
                    "change": "0x00000001"
                },
                {
                    "at": "0x4002",
                    "dt": "0x18",
                    "mf": "0x1037",
                    "min": 1,
                    "max": 3600
                },
                {
                    "at": "0x4003",
                    "dt": "0x29",
                    "mf": "0x1037",
                    "min": 1,
                    "max": 600
                },
                {
                    "at": "0x4008",
                    "dt": "0x22",
                    "mf": "0x1037",
                    "min": 1,
                    "max": 3600
                }
            ]
        }
    ]
}