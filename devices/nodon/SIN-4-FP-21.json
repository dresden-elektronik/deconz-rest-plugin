            "cl": "0xfc00",
            "ep": "0x01",
            "cmd": "0x00",
            "mf": "0x128b",
            "eval": "if (Item.val == 'off') {0} else if (Item.val == 'confort') {1} else if (Item.val == 'eco') {2} else if (Item.val == 'hors gel') {3} else if (Item.val == 'confort-1') {4} else if (Item.val == 'confort-2') {5}",
            "fn": "zcl:cmd"
          }
        },
