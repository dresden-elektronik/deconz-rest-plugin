{
  "schema": "devcap1.schema.json",
  "manufacturername": "Fireangel",
  "modelid": "Alarm_SD_Device",
  "vendor": "Fire Angel",
  "product": "Zigbee Module",
  "matchexpr": "const v = R.item('attr/zonetype').val; (v != 0x0028 && v != 0x002B)",
  "sleeper": false,
  "status": "Gold",
  "subdevices": [
    {
      "type": "$TYPE_WARNING_DEVICE",
      "restapi": "/lights",
      "uuid": [
        "$address.ext",
        "0x01"
      ],
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion",
          "parse": {
            "fn": "zcl:attr",
            "ep": "0x01",
            "cl": "0x0019",
            "at": "0x0002",
            "script": "0019_swversion.js"
          },
          "read": {
            "fn": "zcl:attr",
            "ep": "0x01",
            "cl": "0x0019",
            "at": "0x0002"
          },
          "refresh.interval": 86400
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "attr/zonetype"
        },
        {
          "name": "cap/groups/not_supported"
        },
        {
          "name": "state/alert",
          "read": {
            "fn": "none"
          },
          "write": {
            "cl": "0x0502",
            "cmd": "0x01",
            "ep": "0x01",
            "eval": "Item.val === 'none' ? null : '01'",
            "fn": "zcl:cmd"
          }
        },
        {
          "name": "state/reachable"
        }
      ]
    },
    {
      "type": "$TYPE_ALARM_SENSOR",
      "restapi": "/sensors",
      "uuid": [
        "$address.ext",
        "0x01",
        "0x0500"
      ],
      "fingerprint": {
        "profile": "0x0104",
        "device": "0x0403",
        "endpoint": "0x01",
        "in": [
          "0x0000",
          "0x0001",
          "0x0500"
        ],
        "out": [
          "0x0019"
        ]
      },
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion",
          "parse": {
            "fn": "zcl:attr",
            "ep": "0x01",
            "cl": "0x0019",
            "at": "0x0002",
            "script": "0019_swversion.js"
          },
          "read": {
            "fn": "none"
          }
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "attr/zonetype"
        },
        {
          "name": "config/battery",
          "parse": {
            "ep": "0x01",
            "cl": "0x0001",
            "at": "0x0020",
            "eval": "Item.val = Math.round(9.09090909 * (Attr.val - 19))"
          }
        },
        {
          "name": "config/enrolled"
        },
        {
          "name": "config/on"
        },
        {
          "name": "config/pending"
        },
        {
          "name": "config/reachable"
        },
        {
          "name": "state/alarm",
          "read": {
            "fn": "zcl:attr",
            "ep": "0x01",
            "cl": "0x0500",
            "at": "0x0002"
          },
          "refresh.interval": 300
        },
        {
          "name": "state/lastupdated"
        },
        {
          "name": "state/lowbattery"
        },
        {
          "name": "state/test"
        }
      ]
    }
  ]
}
